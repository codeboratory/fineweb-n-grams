{
  "name": "fineweb-n-grams",
  "module": "index.ts",
  "dependencies": {
    "@duckdb/node-api": "^1.2.2-alpha.18",
    "@duckdb/node-bindings": "^1.2.2-alpha.18",
    "@huggingface/hub": "^1.1.2",
    "lmdb": "^3.2.6",
    "node-addon-api": "^8.3.1",
    "node-gyp": "^11.2.0",
    "tsx": "^4.19.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "start": "UV_THREADPOOL_SIZE=12 tsx src/index.ts",
